# Telegram API配置
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# AI服务配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
ANTHROPIC_API_KEY=your_anthropic_api_key

# 数据库配置
DATABASE_PATH=data/telegram_ai.db
DATABASE_BACKUP_PATH=data/backups

# ZeroMQ配置
IPC_HOST=127.0.0.1
IPC_PORT=5555
IPC_TIMEOUT=5000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/telegram_ai.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 安全配置
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# 加密配置
ENCRYPTION_KEY=your-encryption-key-here
RSA_PUBLIC_KEY_PATH=config/public_key.pem
RSA_PRIVATE_KEY_PATH=config/private_key.pem

# 性能配置
MAX_WORKERS=5
MAX_CONNECTIONS=100
CACHE_TTL=3600
REQUEST_TIMEOUT=30

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here

# 开发配置
DEBUG=false
RELOAD=false
TESTING=false