# 开发环境Dockerfile
FROM node:22-bullseye

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    python3.12 \
    python3.12-venv \
    python3.12-dev \
    python3-pip \
    curl \
    git \
    xvfb \
    libgtk-3-0 \
    libgbm1 \
    libnss3 \
    libasound2 \
    libxss1 \
    libgconf-2-4 \
    libxtst6 \
    libatspi2.0-0 \
    libdrm2 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    && rm -rf /var/lib/apt/lists/*

# 安装Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

# 设置工作目录
WORKDIR /workspace

# 安装Node.js全局工具
RUN npm install -g @vue/cli @electron/rebuild concurrently wait-on

# 创建用户
RUN useradd -m -s /bin/bash developer && \
    chown -R developer:developer /workspace

USER developer

# 设置环境变量
ENV NODE_ENV=development
ENV DISPLAY=:99
ENV PYTHONPATH=/workspace/backend

# 暴露端口
EXPOSE 5173 8000 9090

# 启动脚本
CMD ["bash"]